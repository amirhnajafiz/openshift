apiVersion: config.openshift.io/v1
kind: OAuth
metadata:
  name: cluster
spec:
  identityProviders:
  - name: keycloak
    mappingMethod: claim
    type: OpenID
    openID:
      clientID: {{ keycloak_client_id }}
      clientSecret:
        name: {{ keycloak_client_secret }}
      claims:
        preferredUsername:
        - preferred_username
        name:
        - name
        email:
        - email
      issuer: https://{{ keycloak_url }}/auth/realms/{{ keycloak_realm }}
